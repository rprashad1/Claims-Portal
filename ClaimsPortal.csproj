<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <BlazorDisableThrowNavigationException>true</BlazorDisableThrowNavigationException>
    <!-- Exclude any publish output placed inside the project tree from Static Web Assets lookup -->
    <StaticWebAssetsExclude>publish\**</StaticWebAssetsExclude>
    <!-- Prevent auto-generation of assembly attributes to avoid duplicates in this repo -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Models\Database\" />
    <Folder Include="Tests\ClaimsPortal.Tests\Helpers\" />
  </ItemGroup>

  <!-- Exclude test files from the web project compile items so test projects can build them separately -->
  <ItemGroup>
    <Compile Remove="Tests\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="10.0.1" />
  </ItemGroup>

</Project>
