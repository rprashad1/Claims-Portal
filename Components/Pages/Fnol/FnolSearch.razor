@page "/fnol"
@page "/fnol/search"
@page "/claims/search"
@rendermode InteractiveServer
@using ClaimsPortal.Services
@using ClaimsPortal.Data
@using Microsoft.AspNetCore.Components.Routing
@inject IDatabaseClaimService ClaimService
@inject NavigationManager NavigationManager

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-file-earmark-text me-2"></i>@(SearchMode == "Claims" ? "Claims Search" : "First Notice of Loss (FNOL)")</h2>
            <p class="text-muted">@(SearchMode == "Claims" ? "Search for existing claims" : "Search existing FNOLs or create a new one")</p>
        </div>
        <div class="btn-group">
            <button type="button" class="btn @(SearchMode == "FNOL" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => SetSearchMode("FNOL"))">
                <i class="bi bi-file-earmark-plus me-1"></i>FNOL
            </button>
            <button type="button" class="btn @(SearchMode == "Claims" ? "btn-primary" : "btn-outline-primary")" @onclick="@(() => SetSearchMode("Claims"))">
                <i class="bi bi-folder2-open me-1"></i>Claims
            </button>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="bi bi-search me-2"></i>Search @SearchMode</h6>
            @if (SearchMode == "FNOL")
            {
                <button type="button" class="btn btn-primary" @onclick="CreateNewFnol">
                    <i class="bi bi-plus-circle me-2"></i>Create New FNOL
                </button>
            }
        </div>
        <div class="card-body">
            <div class="row g-3">
                @if (SearchMode == "Claims")
                {
                    <div class="col-md-3">
                        <label class="form-label">Claim Number</label>
                        <input type="text" class="form-control" placeholder="e.g., CLM20241115..." 
                               @bind="SearchClaimNumber" @bind:event="oninput" @onkeypress="HandleKeyPress" />
                    </div>
                }
                <div class="col-md-3">
                    <label class="form-label">FNOL Number</label>
                    <input type="text" class="form-control" placeholder="e.g., FNOL20241115..." 
                           @bind="SearchFnolNumber" @bind:event="oninput" @onkeypress="HandleKeyPress" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Policy Number</label>
                    <input type="text" class="form-control" placeholder="e.g., POL-12345" 
                           @bind="SearchPolicyNumber" @bind:event="oninput" @onkeypress="HandleKeyPress" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Date of Loss From</label>
                    <input type="date" class="form-control" @bind="SearchDateOfLossFrom" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="button" class="btn btn-primary w-100" @onclick="PerformSearch" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-search"></i>
                        }
                    </button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-2">
                    <label class="form-label">Date of Loss To</label>
                    <input type="date" class="form-control" @bind="SearchDateOfLossTo" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="SearchStatus">
                        <option value="">All Statuses</option>
                        @if (SearchMode == "FNOL")
                        {
                            <option value="D">Draft</option>
                        }
                        <option value="O">Open</option>
                        <option value="C">@(SearchMode == "Claims" ? "Closed" : "Converted to Claim")</option>
                    </select>
                </div>
                <div class="col-md-8 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-secondary" @onclick="ClearSearch">
                        <i class="bi bi-x-circle me-1"></i>Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@SuccessMessage
            <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
        </div>
    }

    <!-- Results Section -->
    @if (!HasSearched)
    {
        <!-- Initial State -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-@(SearchMode == "Claims" ? "folder2-open" : "file-earmark-text") display-1 text-muted mb-3"></i>
                <h4 class="text-muted">Welcome to @(SearchMode == "Claims" ? "Claims" : "FNOL") Management</h4>
                <p class="text-muted mb-4">
                    @(SearchMode == "Claims" 
                        ? "Search for existing claims using the filters above." 
                        : "Search for existing FNOLs using the filters above, or create a new FNOL.")
                </p>
                <div class="d-flex justify-content-center gap-3">
                    @if (SearchMode == "FNOL")
                    {
                        <button type="button" class="btn btn-outline-primary" @onclick="ShowDrafts">
                            <i class="bi bi-file-earmark-text me-2"></i>Show My Drafts
                        </button>
                    }
                    <button type="button" class="btn btn-outline-secondary" @onclick="ShowAllOpen">
                        <i class="bi bi-list-ul me-2"></i>Show All Open @SearchMode
                    </button>
                    @if (SearchMode == "FNOL")
                    {
                        <button type="button" class="btn btn-primary" @onclick="CreateNewFnol">
                            <i class="bi bi-plus-circle me-2"></i>Create New FNOL
                        </button>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Results Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="bi bi-list-ul me-2"></i>
                    @(SearchMode == "Claims" ? "Claims" : "FNOLs") Found (@SearchResults.Count)
                </h6>
                @if (SearchResults.Count > 0)
                {
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="ClearResults">
                        <i class="bi bi-x-circle me-1"></i>Clear Results
                    </button>
                }
            </div>
            <div class="card-body">
                @if (SearchResults.Count == 0)
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                        <h5 class="text-muted">No @(SearchMode == "Claims" ? "Claims" : "FNOLs") Found</h5>
                        <p class="text-muted mb-3">No records match your search criteria.</p>
                        @if (SearchMode == "FNOL")
                        {
                            <button type="button" class="btn btn-primary" @onclick="CreateNewFnol">
                                <i class="bi bi-plus-circle me-2"></i>Create New FNOL
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    @if (SearchMode == "Claims")
                                    {
                                        <th>Claim Number</th>
                                    }
                                    <th>FNOL Number</th>
                                    <th>Policy Number</th>
                                    <th>Date of Loss</th>
                                    <th>Report Date</th>
                                    <th>Status</th>
                                    <th>Created By</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var fnol in SearchResults)
                                {
                                    <tr>
                                        @if (SearchMode == "Claims")
                                        {
                                            <td>
                                                <strong class="text-primary">@(fnol.ClaimNumber ?? "-")</strong>
                                            </td>
                                        }
                                        <td>
                                            <strong>@fnol.FnolNumber</strong>
                                        </td>
                                        <td><code>@fnol.PolicyNumber</code></td>
                                        <td>@fnol.DateOfLoss.ToString("MM/dd/yyyy")</td>
                                        <td>@fnol.ReportDate.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            @switch (fnol.FnolStatus)
                                            {
                                                case 'D':
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-pencil me-1"></i>Draft
                                                    </span>
                                                    break;
                                                case 'O':
                                                    <span class="badge bg-primary">
                                                        <i class="bi bi-folder2-open me-1"></i>Open
                                                    </span>
                                                    break;
                                                case 'C':
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>@(SearchMode == "Claims" ? "Active" : "Converted")
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Unknown</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@fnol.CreatedBy</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                @if (SearchMode == "Claims" || fnol.FnolStatus == 'C')
                                                {
                                                    <button type="button" class="btn btn-primary" 
                                                            @onclick="@(() => ViewClaim((fnol.ClaimNumber ?? fnol.FnolNumber)!))" title="View Claim">
                                                        <i class="bi bi-eye me-1"></i>View
                                                    </button>
                                                }
                                                else if (fnol.FnolStatus == 'D')
                                                {
                                                    <button type="button" class="btn btn-primary" 
                                                            @onclick="@(() => ContinueFnol(fnol.FnolNumber!))" title="Continue">
                                                        <i class="bi bi-pencil-square me-1"></i>Continue
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-info" 
                                                            @onclick="@(() => ViewFnol(fnol.FnolNumber!))" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-primary" 
                                                            @onclick="@(() => EditFnol(fnol.FnolNumber!))" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    // Search mode - Will be set based on the URL used to access this page
    private string SearchMode = "FNOL";

    // Search criteria
    private string SearchClaimNumber = "";
    private string SearchFnolNumber = "";
    private string SearchPolicyNumber = "";
    private DateTime? SearchDateOfLossFrom;
    private DateTime? SearchDateOfLossTo;
    private string SearchStatus = "";

    // State
    private bool IsLoading = false;
    private bool HasSearched = false;
    private List<Fnol> SearchResults = new();
    private string? SuccessMessage;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // Set initial mode based on the current URL and subscribe
        SetModeFromUri();
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void SetModeFromUri()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var path = uri.AbsolutePath.ToLower();

        if (path.StartsWith("/claims/search"))
        {
            SearchMode = "Claims";
        }
        else
        {
            SearchMode = "FNOL";
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        SetModeFromUri();
        InvokeAsync(StateHasChanged);
    }

    private void SetSearchMode(string mode)
    {
        SearchMode = mode;
        ClearResults();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        try
        {
            IsLoading = true;
            HasSearched = true;

            char? statusFilter = string.IsNullOrEmpty(SearchStatus) ? null : SearchStatus[0];

            if (SearchMode == "Claims")
            {
                // Search claims - include both Open and Closed claims by default (not just Converted)
                // Claims are FNOLs that have a ClaimNumber assigned (converted from draft/fnol to claim)
                SearchResults = await ClaimService.SearchClaimsAsync(
                    SearchClaimNumber,
                    SearchFnolNumber,
                    SearchPolicyNumber,
                    SearchDateOfLossFrom,
                    SearchDateOfLossTo,
                    statusFilter  // Pass null to search all statuses if not specified
                );
                
                // Filter to only show records that have a ClaimNumber (actual claims, not drafts)
                if (!statusFilter.HasValue)
                {
                    SearchResults = SearchResults
                        .Where(f => !string.IsNullOrEmpty(f.ClaimNumber))
                        .ToList();
                }
            }
            else
            {
                // Search FNOLs
                SearchResults = await ClaimService.SearchFnolsAsync(
                    SearchFnolNumber,
                    SearchPolicyNumber,
                    SearchDateOfLossFrom,
                    SearchDateOfLossTo,
                    statusFilter
                );
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search error: {ex.Message}");
            SearchResults = new List<Fnol>();
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ShowDrafts()
    {
        SearchStatus = "D";
        await PerformSearch();
    }

    private async Task ShowAllOpen()
    {
        // For Claims mode, show Open claims (status 'O')
        // For FNOL mode, show all (no status filter)
        SearchStatus = SearchMode == "Claims" ? "O" : "";
        await PerformSearch();
    }

    private void ClearSearch()
    {
        SearchClaimNumber = "";
        SearchFnolNumber = "";
        SearchPolicyNumber = "";
        SearchDateOfLossFrom = null;
        SearchDateOfLossTo = null;
        SearchStatus = "";
    }

    private void ClearResults()
    {
        ClearSearch();
        SearchResults = new List<Fnol>();
        HasSearched = false;
    }

    private void CreateNewFnol()
    {
        NavigationManager.NavigateTo("/fnol/new");
    }

    private void ContinueFnol(string fnolNumber)
    {
        NavigationManager.NavigateTo($"/fnol/edit/{fnolNumber}");
    }

    private void ViewFnol(string fnolNumber)
    {
        NavigationManager.NavigateTo($"/claim/{fnolNumber}");
    }

    private void EditFnol(string fnolNumber)
    {
        NavigationManager.NavigateTo($"/fnol/edit/{fnolNumber}");
    }

    private void ViewClaim(string claimNumber)
    {
        NavigationManager.NavigateTo($"/claim/{claimNumber}");
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
