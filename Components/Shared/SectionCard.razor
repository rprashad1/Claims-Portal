@using ClaimsPortal.Models

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">
                    <i class="bi bi-file-text"></i> @Title
                </h5>
                @if (!string.IsNullOrEmpty(SubTitle))
                {
                    <small class="text-white-50">@SubTitle</small>
                }
            </div>
            @if (StepNumber > 0)
            {
                <span class="badge bg-light text-primary fs-6">Step @StepNumber</span>
            }
        </div>
    </div>
    <div class="card-body">
        @ChildContent
    </div>
    @if (ShowFooter)
    {
        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between">
                <div>
                    @if (ShowPreviousButton)
                    {
                        <button class="btn btn-outline-secondary" @onclick="OnPrevious">
                            <i class="bi bi-arrow-left"></i> Previous
                        </button>
                    }
                </div>
                <div>
                    @if (ShowNextButton)
                    {
                        <button class="btn btn-primary" @onclick="OnNext" disabled="@(IsNextDisabled)">
                            Next <i class="bi bi-arrow-right"></i>
                        </button>
                    }
                    @if (ShowSaveButton)
                    {
                        <button class="btn btn-success" @onclick="OnSave" disabled="@(IsSaveDisabled)">
                            <i class="bi bi-check-circle"></i> Save
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Section";

    [Parameter]
    public string? SubTitle { get; set; }

    [Parameter]
    public int StepNumber { get; set; }

    [Parameter]
    public bool ShowFooter { get; set; } = true;

    [Parameter]
    public bool ShowPreviousButton { get; set; } = true;

    [Parameter]
    public bool ShowNextButton { get; set; } = true;

    [Parameter]
    public bool ShowSaveButton { get; set; } = false;

    [Parameter]
    public bool IsNextDisabled { get; set; } = false;

    [Parameter]
    public bool IsSaveDisabled { get; set; } = false;

    [Parameter]
    public EventCallback OnNext { get; set; }

    [Parameter]
    public EventCallback OnPrevious { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
