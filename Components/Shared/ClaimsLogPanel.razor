@rendermode InteractiveServer

<div class="card">
    <div class="card-body">
        <h5 class="mb-4">Claims Log</h5>

        <!-- Log Entries Timeline -->
        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-marker bg-success"></div>
                <div class="timeline-content">
                    <h6 class="mb-1">Claim Created</h6>
                    <small class="text-muted">@DateTime.Now.ToString("MM/dd/yyyy hh:mm tt")</small>
                    <p class="mt-2 mb-0">FNOL claim @ClaimNumber created and submitted.</p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-marker bg-info"></div>
                <div class="timeline-content">
                    <h6 class="mb-1">Claim Assigned</h6>
                    <small class="text-muted">@DateTime.Now.AddMinutes(-15).ToString("MM/dd/yyyy hh:mm tt")</small>
                    <p class="mt-2 mb-0">Claim assigned to adjuster for processing.</p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-marker bg-primary"></div>
                <div class="timeline-content">
                    <h6 class="mb-1">Sub-Claims Generated</h6>
                    <small class="text-muted">@DateTime.Now.AddMinutes(-30).ToString("MM/dd/yyyy hh:mm tt")</small>
                    <p class="mt-2 mb-0">Sub-claims automatically created for all injured parties.</p>
                </div>
            </div>
        </div>

        <!-- Add Log Entry Button -->
        <div class="mt-4">
            <button class="btn btn-sm btn-outline-primary" @onclick="ShowAddLogEntry">
                <i class="bi bi-plus-circle"></i> Add Log Entry
            </button>
        </div>

        @if (ShowLogForm)
        {
            <div class="mt-3 p-3 bg-light rounded">
                <div class="mb-3">
                    <label class="form-label">Log Entry</label>
                    <textarea class="form-control" rows="3" placeholder="Enter your log entry..."></textarea>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-primary">Save Entry</button>
                    <button class="btn btn-sm btn-secondary" @onclick="() => ShowLogForm = false">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding: 20px 0;
    }

    .timeline-item {
        display: flex;
        margin-bottom: 30px;
        position: relative;
    }

    .timeline-marker {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 3px solid #fff;
        position: relative;
        margin-right: 20px;
        flex-shrink: 0;
        box-shadow: 0 0 0 2px #dee2e6;
    }

    .timeline-content {
        flex: 1;
        padding-top: 5px;
    }

    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: 14px;
        top: 50px;
        width: 2px;
        height: 30px;
        background-color: #dee2e6;
    }
</style>

@code {
    [Parameter]
    public string ClaimNumber { get; set; } = string.Empty;

    private bool ShowLogForm = false;

    private void ShowAddLogEntry()
    {
        ShowLogForm = true;
    }
}
