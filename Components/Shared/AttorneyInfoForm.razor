@using ClaimsPortal.Models

<div class="attorney-info-form">
    <div class="card">
        <div class="card-header bg-light">
            <h6 class="mb-0">@(string.IsNullOrEmpty(Title) ? "Attorney Information" : Title)</h6>
        </div>
        <div class="card-body">
            <!-- Basic Information -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Attorney Name *</label>
                    <input type="text" class="form-control" @bind="AttorneyData.Name" 
                           placeholder="Full name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Firm Name *</label>
                    <input type="text" class="form-control" @bind="AttorneyData.FirmName" 
                           placeholder="Law firm name" />
                </div>
            </div>

            <!-- License Information -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Bar License Number</label>
                    <input type="text" class="form-control" @bind="AttorneyData.LicenseNumber" 
                           placeholder="License number" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">License State</label>
                    <input type="text" class="form-control" @bind="AttorneyData.LicenseState" 
                           maxlength="2" placeholder="State code" />
                </div>
            </div>

            <!-- Address Information -->
            <div class="mb-3">
                <label class="form-label">Street Address *</label>
                <input type="text" class="form-control" @bind="AttorneyData.Address" 
                       placeholder="Street address" />
            </div>

            <div class="mb-3">
                <label class="form-label">Address Line 2 (Optional)</label>
                <input type="text" class="form-control" @bind="AttorneyData.Address2" 
                       placeholder="Suite, apt, etc." />
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">City *</label>
                    <input type="text" class="form-control" @bind="AttorneyData.City" 
                           placeholder="City" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">State *</label>
                    <input type="text" class="form-control" @bind="AttorneyData.State" 
                           maxlength="2" placeholder="State" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Zip Code *</label>
                    <input type="text" class="form-control" @bind="AttorneyData.ZipCode" 
                           placeholder="Zip code" />
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Phone Number *</label>
                    <input type="tel" class="form-control" @bind="AttorneyData.PhoneNumber" 
                           placeholder="(555) 000-0000" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" @bind="AttorneyData.Email" 
                           placeholder="email@example.com" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Attorney AttorneyData { get; set; } = new();

    [Parameter]
    public EventCallback<Attorney> AttorneyDataChanged { get; set; }

    [Parameter]
    public string Title { get; set; } = string.Empty;
}
