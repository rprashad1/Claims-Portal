@using ClaimsPortal.Models
@using ClaimsPortal.Services
@inject IVendorSearchService VendorSearchService
@inject IJSRuntime JS

<div class="modal fade" id="@ModalId" tabindex="-1" role="dialog" aria-labelledby="attorneySearchLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="attorneySearchLabel">
                    <i class="bi bi-briefcase me-2"></i>Search Attorney from Vendor Master
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="OnCancel" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Attorney Type Selection -->
                <div class="mb-3">
                    <label class="form-label">Attorney Type</label>
                    <select class="form-select" @bind="SelectedAttorneyType" @bind:after="OnAttorneyTypeChanged">
                        <option value="">-- All Attorney Types --</option>
                        <option value="Defense Attorney">Defense Attorney</option>
                        <option value="Plaintiff Attorneys">Plaintiff Attorneys</option>
                    </select>
                </div>

                <!-- Search Section -->
                <div class="card mb-3 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-search me-2"></i>Search Attorneys
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Search by attorney name or firm name..." 
                                       @bind="SearchTerm" @bind:event="oninput" @onkeypress="HandleSearchKeyPress" />
                            </div>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary w-100" @onclick="SearchAttorneys" disabled="@IsSearching">
                                    @if (IsSearching)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Searching...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-search me-1"></i>
                                        <span>Search</span>
                                    }
                                </button>
                            </div>
                        </div>

                        @if (HasSearched)
                        {
                            @if (SearchResults.Count > 0)
                            {
                                <div class="mt-3" style="max-height: 300px; overflow-y: auto;">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light sticky-top">
                                            <tr>
                                                <th>Name / Firm</th>
                                                <th>Type</th>
                                                <th>Contact</th>
                                                <th>Address</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var vendor in SearchResults)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@vendor.Name</strong>
                                                        @if (!string.IsNullOrEmpty(vendor.DoingBusinessAs))
                                                        {
                                                            <br /><small class="text-muted">DBA: @vendor.DoingBusinessAs</small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(vendor.ContactName))
                                                        {
                                                            <br /><small class="text-muted">Contact: @vendor.ContactName</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-secondary">@vendor.VendorType</span>
                                                    </td>
                                                    <td>
                                                        <small>
                                                            @if (!string.IsNullOrEmpty(vendor.Phone))
                                                            {
                                                                <i class="bi bi-telephone me-1"></i>@vendor.Phone<br />
                                                            }
                                                            @if (!string.IsNullOrEmpty(vendor.Email))
                                                            {
                                                                <i class="bi bi-envelope me-1"></i>@vendor.Email
                                                            }
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <small>@vendor.GetShortAddress()</small>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-success" @onclick="@(() => SelectAttorney(vendor))">
                                                            <i class="bi bi-check-lg"></i> Select
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mt-3 mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No attorneys found matching your search criteria. You can enter the information manually.
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-secondary mt-3 mb-0">
                                <i class="bi bi-lightbulb me-2"></i>
                                Enter a search term and click Search to find attorneys from the Vendor Master.
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel">
                    <i class="bi bi-x-lg me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-outline-primary" @onclick="EnterManually">
                    <i class="bi bi-pencil me-1"></i>Enter Manually
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string ModalId { get; set; } = "attorneySearchModal";

    [Parameter]
    public EventCallback<AttorneyInfo> OnAttorneySelected { get; set; }

    [Parameter]
    public EventCallback OnManualEntry { get; set; }

    [Parameter]
    public EventCallback OnCancelled { get; set; }

    private string SelectedAttorneyType = "";
    private string SearchTerm = "";
    private bool IsSearching = false;
    private bool HasSearched = false;
    private List<VendorSearchResult> SearchResults = new();

    public async Task ShowAsync()
    {
        // Reset state
        SelectedAttorneyType = "";
        SearchTerm = "";
        HasSearched = false;
        SearchResults = new();
        
        await JS.InvokeVoidAsync("ShowModal", ModalId);
    }

    private void OnAttorneyTypeChanged()
    {
        // Reset search when type changes
        HasSearched = false;
        SearchResults = new();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchAttorneys();
        }
    }

    private async Task SearchAttorneys()
    {
        try
        {
            IsSearching = true;
            HasSearched = true;

            SearchResults = await VendorSearchService.SearchAttorneysAsync(
                SearchTerm, 
                string.IsNullOrEmpty(SelectedAttorneyType) ? null : SelectedAttorneyType, 
                20);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching attorneys: {ex.Message}");
            SearchResults = new();
        }
        finally
        {
            IsSearching = false;
        }
    }

    private async Task SelectAttorney(VendorSearchResult vendor)
    {
        Console.WriteLine($"[AttorneySearchModal] SelectAttorney invoked for vendor {vendor?.EntityId}");
        // Convert to AttorneyInfo
        var attorneyInfo = new AttorneyInfo
        {
            // Store the vendor's VendorId so backend can find the VendorMaster record
            VendorEntityId = vendor.VendorId,
            Name = vendor.ContactName ?? vendor.Name,
            FirmName = vendor.Name,
            PhoneNumber = vendor.Phone ?? "",
            Email = vendor.Email ?? "",
            Address = new Address
            {
                StreetAddress = vendor.StreetAddress ?? "",
                AddressLine2 = vendor.AddressLine2 ?? "",
                City = vendor.City ?? "",
                State = vendor.State ?? "",
                ZipCode = vendor.ZipCode ?? ""
            }
        };

        Console.WriteLine("[AttorneySearchModal] Invoking OnAttorneySelected");
        await OnAttorneySelected.InvokeAsync(attorneyInfo);
        Console.WriteLine("[AttorneySearchModal] Invoked OnAttorneySelected");

        // hide modal after invoking callback to avoid unmounting parent before it processes the event
        await JS.InvokeVoidAsync("HideModal", ModalId);
    }

    private async Task EnterManually()
    {
        Console.WriteLine("[AttorneySearchModal] EnterManually invoked");
        // hide modal immediately to avoid overlay/focus issues
        await JS.InvokeVoidAsync("HideModal", ModalId);
        await OnManualEntry.InvokeAsync();
    }

    private async Task OnCancel()
    {
        Console.WriteLine("[AttorneySearchModal] OnCancel invoked");
        await JS.InvokeVoidAsync("HideModal", ModalId);
        await OnCancelled.InvokeAsync();
    }
}
