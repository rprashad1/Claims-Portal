@using ClaimsPortal.Models
@using ClaimsPortal.Services
@inject IVendorSearchService VendorSearchService
@inject IJSRuntime JS

<div class="modal fade" id="@ModalId" tabindex="-1" role="dialog" aria-labelledby="hospitalSearchLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="hospitalSearchLabel">
                    <i class="bi bi-hospital me-2"></i>Search Hospital from Vendor Master
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="OnCancel" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Search Section -->
                <div class="card mb-3 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-search me-2"></i>Search Hospitals & Medical Providers
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Search by hospital name..." 
                                       @bind="SearchTerm" @bind:event="oninput" @onkeypress="HandleSearchKeyPress" />
                            </div>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary w-100" @onclick="SearchHospitals" disabled="@IsSearching">
                                    @if (IsSearching)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Searching...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-search me-1"></i>
                                        <span>Search</span>
                                    }
                                </button>
                            </div>
                        </div>

                        @if (HasSearched)
                        {
                            @if (SearchResults.Count > 0)
                            {
                                <div class="mt-3" style="max-height: 300px; overflow-y: auto;">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light sticky-top">
                                            <tr>
                                                <th>Hospital Name</th>
                                                <th>Type</th>
                                                <th>Contact</th>
                                                <th>Address</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var hospital in SearchResults)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@hospital.Name</strong>
                                                        @if (!string.IsNullOrEmpty(hospital.DoingBusinessAs))
                                                        {
                                                            <br /><small class="text-muted">DBA: @hospital.DoingBusinessAs</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@hospital.VendorType</span>
                                                    </td>
                                                    <td>
                                                        <small>
                                                            @if (!string.IsNullOrEmpty(hospital.Phone))
                                                            {
                                                                <i class="bi bi-telephone me-1"></i>@hospital.Phone<br />
                                                            }
                                                            @if (!string.IsNullOrEmpty(hospital.Email))
                                                            {
                                                                <i class="bi bi-envelope me-1"></i>@hospital.Email
                                                            }
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <small>@hospital.GetShortAddress()</small>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-success" @onclick="@(() => SelectHospital(hospital))">
                                                            <i class="bi bi-check-lg"></i> Select
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mt-3 mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No hospitals found matching your search criteria. You can enter the information manually.
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-secondary mt-3 mb-0">
                                <i class="bi bi-lightbulb me-2"></i>
                                Enter a search term and click Search to find hospitals from the Vendor Master.
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel">
                    <i class="bi bi-x-lg me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-outline-primary" @onclick="EnterManually">
                    <i class="bi bi-pencil me-1"></i>Enter Manually
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string ModalId { get; set; } = "hospitalSearchModal";

    [Parameter]
    public EventCallback<HospitalInfo> OnHospitalSelected { get; set; }

    [Parameter]
    public EventCallback OnManualEntry { get; set; }

    [Parameter]
    public EventCallback OnCancelled { get; set; }

    private string SearchTerm = "";
    private bool IsSearching = false;
    private bool HasSearched = false;
    private List<VendorSearchResult> SearchResults = new();

    public async Task ShowAsync()
    {
        // Reset state
        SearchTerm = "";
        HasSearched = false;
        SearchResults = new();
        // ensure the component renders updated state before JS shows the modal
        await InvokeAsync(StateHasChanged);
        await JS.InvokeVoidAsync("ShowModal", ModalId);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchHospitals();
        }
    }

    private async Task SearchHospitals()
    {
        try
        {
            IsSearching = true;
            HasSearched = true;

            SearchResults = await VendorSearchService.SearchHospitalsAsync(SearchTerm, 20);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching hospitals: {ex.Message}");
            SearchResults = new();
        }
        finally
        {
            IsSearching = false;
        }
    }

    private async Task SelectHospital(VendorSearchResult hospital)
    {
        // Convert to HospitalInfo
        var hospitalInfo = new HospitalInfo
        {
            EntityId = hospital.EntityId,
            Name = hospital.Name,
            StreetAddress = hospital.StreetAddress ?? "",
            City = hospital.City ?? "",
            State = hospital.State ?? "",
            ZipCode = hospital.ZipCode ?? "",
            Phone = hospital.Phone ?? ""
        };

        // log to client console for debugging selection flow
        try { await JS.InvokeVoidAsync("console.log", "HospitalSearchModal.SelectHospital", hospital.EntityId, hospital.Name); } catch { }
        await OnHospitalSelected.InvokeAsync(hospitalInfo);
        await JS.InvokeVoidAsync("HideModal", ModalId);
    }

    private async Task EnterManually()
    {
        // hide modal immediately to avoid overlay/focus issues, then notify parent
        await JS.InvokeVoidAsync("HideModal", ModalId);
        await OnManualEntry.InvokeAsync();
    }

    private async Task OnCancel()
    {
        // hide modal first to keep behavior consistent with Attorney modal
        await JS.InvokeVoidAsync("HideModal", ModalId);
        await OnCancelled.InvokeAsync();
    }
}
